<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TermStart"

        />

    <TextView
        android:id="@+id/TermStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@id/TermEnd"
        app:layout_constraintHorizontal_bias="5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TermEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="5"
        app:layout_constraintStart_toEndOf="@+id/TermStart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StartofTermWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="5"
        app:layout_constraintStart_toEndOf="@+id/TermEnd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EndofTermWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="5"
        app:layout_constraintStart_toEndOf="@+id/StartofTermWords"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>